document.getElementById("fjerdeside").style.display = "none";
document.getElementById("femteside").style.display = "none";
document.getElementById("sjetteside").style.display = "none";
document.getElementById("syvendeside").style.display = "none";
document.getElementById("åttendeside").style.display = "none";
document.getElementById("niendeside").style.display = "none";
}

