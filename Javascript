function hidesubMeny(){
document.getElementById("secondnav").style.display= "none";
document.getElementById("thirdnav").style.display= "none";
document.getElementById("fourthnav").style.display= "none";
document.getElementById("Meny1").style.background = "#7f2d2d";
document.getElementById("Meny2").style.background = "#7f2d2d";
document.getElementById("Meny3").style.background = "#7f2d2d";
}


function showsubMeny1(){
document.getElementById("secondnav").style.display= "block";
document.getElementById("thirdnav").style.display= "none";
document.getElementById("fourthnav").style.display= "none";
document.getElementById("Meny1").style.background = "#7f2d2d";
document.getElementById("Meny2").style.background = "#7f2d2d";
document.getElementById("Meny3").style.background = "#7f2d2d";
}

